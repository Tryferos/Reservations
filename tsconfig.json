{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "paths": {
        "*": [
            "node_modules/*",
        ]
      },
    },
    "include": [
        "./src/*"
    ],
    "lib": ["es2015"],
    "exclude": ["node_modules"]
  }